# Use official Python base image
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Copy application files
COPY . /app

# Install Flask
RUN pip install flask

# Expose port 5000 for the app
EXPOSE 5000

# Run the app
CMD ["python", "app.py"]


build n run docker img
# Build the Docker image
docker build -t flask-registration .

# List Docker images
docker images


run the container
# Run the container from the image
docker run -d -p 5000:5000 --name registration-app flask-registration

# List running containers
docker ps

docker stop registration-app


# Remove stopped container
docker rm registration-app

# Remove image
docker rmi flask-registration

